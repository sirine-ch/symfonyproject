{% extends 'base.html.twig' %}
  
{% block title %}Détails{% endblock %}
  
{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Détails livre</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_symfonyproject_index') }}"> 
                    Acceuil
                </a>
            </div>
            <div class="card-body">
                <b class="text-muted">Titre:</b>
                <p>{{ symfonyproject.titre }}</p>
                <b class="text-muted">Description:</b>
                <p>{{ symfonyproject.description }}</p>
                <b class="text-muted">Date de création:</b>
                <p>{{ symfonyproject.createdAt ? symfonyproject.createdAt|date('Y-m-d H:i:s') : '' }}</p>
                <b class="text-muted">Date de mise à jour:</b>
                <p>{{ symfonyproject.updatedAt ? symfonyproject.updatedAt|date('Y-m-d H:i:s') : '' }}</p>
            </div>
        </div>
    </div>
{% endblock %}
